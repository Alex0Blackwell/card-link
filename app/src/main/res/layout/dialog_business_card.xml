<?xml version="1.0" encoding="utf-8"?>
<!--
Not yet complete or finalized; just some content to give an idea of what the business
card could be
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/business_card_dialog_profile_photo"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/ic_baseline_person_24"
                android:contentDescription="@string/profile_image_description" />
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/business_card_dialog_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="Alex Blackwell"/>
                <TextView
                    android:id="@+id/business_card_dialog_occupation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Software Engineer"/>
            </LinearLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/business_card_dialog_bio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="SFU Computer science student. Vancouver,  B.C."/>
        <TextView
            android:id="@+id/business_card_dialog_github"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https://github.com/Alex0Blackwell"/>
    </LinearLayout>
</LinearLayout>
